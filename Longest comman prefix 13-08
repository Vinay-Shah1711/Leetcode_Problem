class Solution:
    def longestCommonPrefix(self, strs: List[str]) -> str:
        if not strs:
            return ""
        
        prefix = strs[0]  
        result = ""
        
        while prefix:  # loop until prefix is empty
            count = 0  # reset count for each iteration
            for word in strs:
                if word.startswith(prefix):
                    count += 1
                else:
                    break
            
            if count == len(strs):
                result = prefix
                break  # found the longest common prefix
            else:
                prefix = prefix[:-1]  # shrink prefix from the end
        
        return result
